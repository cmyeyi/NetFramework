<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cpb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/id_http_string_request_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="15dp"
        android:text="StringRequest" />

    <Button
        android:id="@+id/id_http_json_request_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="15dp"
        android:text="JsonRequest" />

    <Button
        android:id="@+id/id_http_image_request_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="15dp"
        android:text="ImageRequest" />


    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:visibility="gone">
        <hq.demo.net.view.CircleProgressBar
            android:id="@+id/circle_pb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_progress_bar_bg"
            cpb:progress_background="@color/circle_progress_bg_color"
            cpb:radius="24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/id_result_volley_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:scrollbars="vertical" />

        <ImageView
            android:id="@+id/id_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:minHeight="200dp" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/id_network_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

        </com.android.volley.toolbox.NetworkImageView>
    </RelativeLayout>
</LinearLayout>